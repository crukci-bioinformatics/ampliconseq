
manifest {
    name = 'crukci-bioinformatics/ampliconseq'
    author = 'Matt Eldridge'
    homePage = 'https://github.com/crukci-bioinformatics/ampliconseq'
    description = 'Variant calling pipeline for amplicon sequencing data'
    mainScript = 'ampliconseq.nf'
    nextflowVersion = '>=20.10.0'
    version = '2.0.0'
}

process {
    container = 'crukcibioinformatics/ampliconseq'

    errorStrategy = { task.exitStatus in [143,137,104,134,139] ? 'retry' : 'finish' }

    cpus = 1
    memory = 1.GB
    time = 1.hour
}

singularity {
    enabled = true
    autoMounts = true
    cacheDir = "${launchDir}"
}

profiles {
    standard {
        process.executor = 'local'
        executor {
            cpus = 4
            memory = 8.GB
        }
    }

    bigserver {
        process.executor = 'local'
        executor {
            cpus = 40
            memory = 128.GB
        }
    }

    cluster {
        process.executor = 'slurm'
        executor {
            queueSize = 50
            pollInterval = 30.sec
            jobName = { "'$task.name'" }
        }
    }
}

