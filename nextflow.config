
manifest {
    name = 'crukci-bioinformatics/ampliconseq'
    author = 'Matt Eldridge'
    homePage = 'https://github.com/crukci-bioinformatics/ampliconseq'
    description = 'Variant calling pipeline for amplicon sequencing data'
    mainScript = 'ampliconseq.nf'
    nextflowVersion = '>=20.10.0'
    version = '1.0-snapshot'
}

params {
    help                  = false
    sampleSheet           = "${launchDir}/samples.csv"
    bamDir                = "${launchDir}/bam"
    ampliconDetails       = "${launchDir}/reference_data/amplicons.csv"
    referenceGenomeFasta  = "${launchDir}/reference_data/GRCh37.fa"
    minimumAlleleFraction = 0.01
    vepCacheDir           = "${launchDir}/vep_cache"
    vepSpecies            = "homo_sapiens"
    vepAssembly           = "GRCh37"
    outputDir             = "${launchDir}"
    outputPrefix          = ""
}

process {
    container = 'crukcibioinformatics/ampliconseq'

    errorStrategy = { task.exitStatus in [143,137,104,134,139] ? 'retry' : 'finish' }

    cpus = 1
    memory = 1.GB
    time = 1.hour
}

singularity {
    autoMounts = true
    cacheDir = "${launchDir}"
}

profiles {
    standard {
        process.executor = 'local'
        executor {
            cpus = 4
            memory = 8.GB
        }
    }

    bigserver {
        process.executor = 'local'
        executor {
            cpus = 40
            memory = 128.GB
        }
    }

    cluster {
        process.executor = 'slurm'
        executor {
            queueSize = 50
            pollInterval = 30.sec
            jobName = { "'$task.name'" }
        }
        singularity.enabled = true
    }
}

